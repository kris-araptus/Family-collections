---
import PostCard from './PostCard.astro';
const { posts } = Astro.props;
---

<div class="post-feed">
  {posts.map((post) => (
    <PostCard post={post} />
  ))}
</div>

<style>
  .post-feed {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1rem;
  }
</style>
